<h2>Team Randomizer</h2>
<form action="/" method="post">
  <h4>Please Enter Names (Separate names with commas):</h4>
  <textarea name="names" rows="20" cols="50" placeholder="e.g. John, Smith, Nick..."></textarea>
  <h4>How many teams do you want?</h4>
  <input type="text" name="number" placeholder="e.g. 5"  />
  <input type="submit" value="Generate!">
</form>

<!-- <% if @team_list %> -->

  <% if @error_message %>
  <%= @error_message %>
  <% else %>
    <% for i in (1..@team_amount) %>
    <h4><%= "Team #{i}" %></h4>
    <ul>
      <li>
        <%= "#{@team_list["team #{i}"].join(",")}" %>
      </li>
    </ul>
    <% end %>
  <% end %>
